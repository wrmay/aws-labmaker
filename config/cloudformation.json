      "Type" : "AWS::EC2::SecurityGroup",
      "Properties" : {
         "GroupDescription" : "GGreenSecurityGroup",
         "VpcId" : {"Ref" : "VPC"},
         "SecurityGroupIngress" : [
            {
              "IpProtocol" : "-1",
               "CidrIp" : { "Fn::GetAtt": ["VPC","CidrBlock"]}
